<launch>
  <!-- optional arguments for RRT -->

  
  <!-- Launch the map server -->
  <arg name="map_name" default="simple_maze"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(find turtlebot_rrt)/maps/$(arg map_name).yaml" respawn="false">
    <param name="frame_id" value="map"/>
  </node>
  
  <!-- Launch robot model and Gazebo-->
  <include file="$(find turtlebot_rrt)/launch/includes/turtlebot3_world.launch.xml"/>

  <!-- Fake laser -->
  <node pkg="nodelet" type="nodelet" name="laserscan_nodelet_manager" args="manager"/>
  <node pkg="nodelet" type="nodelet" name="depthimage_to_laserscan"
        args="load depthimage_to_laserscan/DepthImageToLaserScanNodelet laserscan_nodelet_manager">
    <param name="scan_height" value="10"/>
    <param name="output_frame_id" value="/camera_depth_frame"/>
    <param name="range_min" value="0.45"/>
    <remap from="image" to="/camera/depth/image_raw"/>
    <remap from="scan" to="/scan"/>
  </node>  
  
  <!-- Launch Rviz -->
  <arg name="target" default="all"/>
  
  <node name="rviz" pkg="rviz" type="rviz" output="screen" respawn="true" args="-d $(find turtlebot_rrt)/maps/simple_maze.rviz"/>

  <!-- Launch AMCL -->
  <include file="$(find turtlebot_rrt)/launch/includes/amcl.launch.xml"/>
  
  <!-- Move base -->
  <!-- <arg name="step_size" default="2.5"/>
  <arg name="delta" default="$(eval arg('step_size') / 2)"/>
  <arg name="max_iterations" default="200000"/>
  <arg name="goal_radius" default="1.0"/>      
  <include file="$(find turtlebot_rrt)/launch/includes/move_base.launch.xml">
    <arg name="custom_param_file" value="$(find turtlebot_rrt)/config/rrt_global_planner_params.yaml"/>
    <arg name="step_size" value="$(arg step_size)"/>
    <arg name="delta" value="$(arg delta)"/>
    <arg name="max_iterations" value="$(arg max_iterations)"/>
    <arg name="goal_radius" value="$(arg goal_radius)"/>    
  </include> -->

  <!-- move_base -->
  <include file="$(find turtlebot_rrt)/launch/includes/move_base.launch" />
    <!-- <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include> -->
</launch>